{
  "name": "trusted-issuer-registry",
  "version": "0.0.4",
  "description": "Registry of trusted credential issuers",
  "homepage": "https://github.com/universal-verify/trusted-issuer-registry#readme",
  "license": "MPL-2.0",
  "author": "kalegd",
  "type": "module",
  "main": "build/trusted-issuer-registry.js",
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "lint": "eslint ./scripts --ext .js",
    "lint-fix": "eslint ./scripts --ext .js --fix",
    "test": "node --test",
    "sign-issuers": "node scripts/sign-issuers.js",
    "deprecate": "node scripts/add-deprecation-notice.js",
    "validate-json": "node scripts/schema-check.js",
    "prepublishOnly": "node scripts/publish-sanity-checks.js"
  },
  "keywords": [
    "digital-credentials",
    "w3c",
    "mdoc",
    "mobile-id",
    "identity-verification",
    "digital-id",
    "id-verification",
    "credential-management",
    "credential-issuer"
  ],
  "bugs": {
    "url": "https://github.com/universal-verify/trusted-issuer-registry/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/universal-verify/trusted-issuer-registry.git"
  },
  "dependencies": {
    "asn1js": "^3.0.6",
    "canonical-json": "^0.2.0",
    "pkijs": "^3.2.5"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@stylistic/eslint-plugin": "^5.1.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "rollup": "^4.44.2"
  }
}
